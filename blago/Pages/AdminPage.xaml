<Page x:Class="blago.Pages.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:blago.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminPage" HorizontalAlignment="Center" VerticalAlignment="Center">

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.Background>
            <ImageBrush ImageSource="/Image/LogIn_BG.png" Stretch="UniformToFill" TileMode="Tile">
                <ImageBrush.RelativeTransform>
                    <TransformGroup>
                        <ScaleTransform CenterY="0.5" CenterX="0.5" ScaleX="0.5" ScaleY="0.5"/>
                        <SkewTransform CenterX="0.5" CenterY="0.5"/>
                        <RotateTransform CenterX="0.5" CenterY="0.5"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </ImageBrush.RelativeTransform>
            </ImageBrush>
        </Grid.Background>
        <DataGrid Margin="181,10,10,42" Height="398" Width="609" x:Name="TableView" AutoGenerateColumns="True"/>
        <ListBox Margin="10,10,624,42" Width="166" x:Name="TableList" SelectionChanged="TableList_SelectionChanged" Background="{x:Null}" BorderBrush="{x:Null}" FontSize="20" Foreground="#FFE2E2E2" FontWeight="Bold"/>
        <Button Content="Button" Margin="181,413,489,10"  Height="27" Width="130" Click="AddNote"/>
        <Button Content="Button" Margin="316,413,354,10"  Height="27" Width="130" Click="DeleteNote"/>
        <Button Content="Button"  Margin="451,413,219,10"  Height="27" Width="130" Click="EditNote"/>
        <Button Content="👤"  Margin="763,413,10,10"  Height="27" Width="27" Click="CreateUser" Background="{x:Null}" BorderBrush="{x:Null}" FontWeight="Bold" FontSize="18"  Foreground="#FFE2E2E2"/>
        <Button Content="+" Margin="37,408,730,10" Click="CreateTable" Background="{x:Null}" BorderBrush="{x:Null}" FontWeight="Bold" FontSize="20" VerticalContentAlignment="Center" RenderTransformOrigin="0.455,0.383"  Foreground="#FFE2E2E2"/>
        <Button Content="-" Margin="75,408,692,10" Click="DeleteTable" ToolTip="Удалить выбранную таблицу" Background="{x:Null}" BorderBrush="{x:Null}" FontWeight="Bold" FontSize="20" VerticalContentAlignment="Center"  Foreground="#FFE2E2E2"/>
        <Button Content="✎" Margin="113,408,654,10" Click="EditTable" BorderBrush="{x:Null}" Background="{x:Null}" FontWeight="Bold" FontSize="18" Foreground="#FFE2E2E2"/>

    </Grid>
</Page>
