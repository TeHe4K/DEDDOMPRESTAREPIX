<Page x:Class="blago.Pages.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:blago.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" MaxHeight="450" MaxWidth="800"
      Title="AdminPage"
      KeyDown="Exit">


    <Grid Background="{StaticResource BgDark}">
        <!--Data Base View-->
        <DataGrid 
            Margin="181,10,10,42" 
            x:Name="TableView" 
            Style="{DynamicResource ModernDataGrid}"/>
        <!--Table List-->
        <ListBox 
            Margin="10,10,624,42" 
            x:Name="TableList" 
            SelectionChanged="TableList_SelectionChanged" 
            Style="{DynamicResource BaseInput}"/>
        <!--Object Table edit-->
        <Button 
            Content="Add" 
            Margin="181,412,489,11" 
            Width="130" 
            Style="{StaticResource PrimaryButton}" 
            Click="AddNote" 
            Height="27"/>
        <Button 
            Content="Delete" 
            Margin="316,412,354,11" 
            Width="130" 
            Style="{StaticResource PrimaryButton}" 
            Click="DeleteNote" 
            Height="27"/>
        <Button 
            Content="Edit" 
            Margin="451,412,219,11" 
            Width="130" 
            Style="{StaticResource PrimaryButton}" 
            Click="EditNote" 
            Height="27"/>
        <Button 
            Content="👤" 
            Margin="763,412,10,11" 
            Style="{StaticResource SecondaryButton}" 
            Click="CreateUser" 
            FontSize="20" 
            Height="27"/>
        <!--Table Edit-->
        <Grid Margin="10,408,624,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button 
                Content="✔"
                Grid.Column="0"
                Style="{StaticResource SecondaryButton}" 
                Click="CreateTable" 
                FontSize="18" 
                Height="27" Width="27"
                Margin="0,0,0,7"/>
            <Button 
                Content="✖︎" 
                Grid.Column="1"
                Style="{StaticResource SecondaryButton}" 
                Click="DeleteTable" 
                FontSize="15"
                Height="27" Width="27"
                Margin="0,0,0,7"/>
            <Button 
                Content="✎" 
                Grid.Column="2"
                Style="{StaticResource SecondaryButton}" 
                Click="EditTable" 
                FontSize="20" 
                Height="27" Width="27"
                Margin="0,0,0,7"/>
        </Grid>
    </Grid>
</Page>
