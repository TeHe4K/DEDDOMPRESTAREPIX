<Window x:Class="blago.Pages.CreateUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:blago.Pages"
        mc:Ignorable="d"
        Title="Создание нового пользователя" 
        Height="450" 
        Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" SizeToContent="WidthAndHeight">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" 
                   Text="Создание пользователя SQL Server" 
                   FontSize="16" 
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <!-- Форма -->
        <StackPanel Grid.Row="1">
            <StackPanel Margin="0,0,0,15">
                <TextBlock Text="Логин SQL Server:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="UsernameTextBox" 
                         Height="25" 
                         Padding="3"
                         TextChanged="UsernameTextBox_TextChanged"/>
                <TextBlock x:Name="UsernameHint" 
                           Text="Это имя будет использоваться для входа в SQL Server" 
                           FontSize="10" 
                           Foreground="Gray"
                           Margin="0,2,0,0"/>
            </StackPanel>

            <StackPanel Margin="0,0,0,15">
                <TextBlock Text="ФИО:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="FullNameTextBox" 
                         Height="25" 
                         Padding="3"/>
            </StackPanel>

            <StackPanel Margin="0,0,0,15">
                <TextBlock Text="Пароль SQL Server:" FontWeight="Bold" Margin="0,0,0,5"/>
                <PasswordBox x:Name="PasswordBox" 
                             Height="25" 
                             Padding="3"
                             PasswordChanged="PasswordBox_PasswordChanged"/>
                <TextBlock x:Name="PasswordRequirements" 
                           Text="Пароль должен содержать не менее 8 символов, включая заглавные, строчные буквы, цифры и специальные символы" 
                           FontSize="10" 
                           Foreground="Gray"
                           Margin="0,2,0,0"
                           TextWrapping="Wrap"/>
                <TextBlock x:Name="PasswordStrength" 
                           Text="" 
                           FontSize="10" 
                           FontWeight="Bold"
                           Margin="0,2,0,0"/>
            </StackPanel>

            <StackPanel Margin="0,0,0,15">
                <TextBlock Text="Подтверждение пароля:" FontWeight="Bold" Margin="0,0,0,5"/>
                <PasswordBox x:Name="ConfirmPasswordBox" 
                             Height="25" 
                             Padding="3"
                             PasswordChanged="ConfirmPasswordBox_PasswordChanged"/>
                <TextBlock x:Name="PasswordMatch" 
                           Text="" 
                           FontSize="10" 
                           FontWeight="Bold"
                           Margin="0,2,0,0"/>
            </StackPanel>

            <StackPanel Margin="0,0,0,15">
                <CheckBox x:Name="GeneratePasswordCheckBox" 
                          Content="Сгенерировать безопасный пароль"
                          IsChecked="True"
                          Checked="GeneratePasswordCheckBox_Checked"
                          Unchecked="GeneratePasswordCheckBox_Unchecked"/>
                <TextBlock x:Name="GeneratedPasswordText" 
                            Text="" 
                            FontSize="10" 
                            FontWeight="Bold"
                             Foreground="Green"
           Margin="20,5,0,0"/>
            </StackPanel>

            <StackPanel Margin="0,0,0,15">
                <TextBlock Text="Роли базы данных:" FontWeight="Bold" Margin="0,0,0,5"/>
                <ListBox x:Name="RolesListBox" 
                         Height="80"
                         SelectionMode="Multiple">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <CheckBox Content="{Binding}" 
                                      IsChecked="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsSelected}"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Создать" 
                    Click="CreateButton_Click" 
                    Width="100"
                    Background="LightGreen"
                    Margin="0,0,10,0"
                    x:Name="CreateButton"/>
            <Button Content="Отмена" 
                    Click="CancelButton_Click" 
                    Width="80"
                    Background="LightGray"/>
        </StackPanel>
    </Grid>
</Window>