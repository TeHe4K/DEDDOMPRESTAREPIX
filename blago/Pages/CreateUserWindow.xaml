<Window x:Class="blago.Pages.CreateUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:blago.Pages"
        mc:Ignorable="d"
        Title="Создание нового пользователя" 
        Height="655" 
        Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" SizeToContent="WidthAndHeight"
        Background="{DynamicResource BgDark}">
    <Window.Resources>
        <Style TargetType="ListBox">
            <Setter Property="Background" Value="{StaticResource CardBg}"/>
            <Setter Property="Foreground" Value="{StaticResource TextLight}"/>
            <Setter Property="BorderBrush" Value="{StaticResource InputBorder}"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style TargetType="ListBoxItem">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Background" Value="#112A2A"/>
            <Setter Property="Foreground" Value="{StaticResource TextLight}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{StaticResource Teal}"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>

                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1F4444"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" 
                   Text="Создание пользователя SQL Server" 
                   FontSize="16" 
                   FontWeight="Bold"
                   Margin="0,0,0,20"
                   Style="{DynamicResource TitleText}"/>

        <!-- Форма -->
        <StackPanel Grid.Row="1">
            <StackPanel Margin="0,0,0,15">
                <TextBlock Text="Логин SQL Server:" Style="{StaticResource CaptionText}" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="UsernameTextBox" 
                         Height="25" 
                         Padding="3"
                         TextChanged="UsernameTextBox_TextChanged"
                         Style="{DynamicResource InputBoxStyle}"/>
                <TextBlock x:Name="UsernameHint" 
                           Text="Это имя будет использоваться для входа в SQL Server" 
                           FontSize="10" 
                           Foreground="Gray"
                           Margin="0,2,0,0"/>
            </StackPanel>

            <StackPanel Margin="0,0,0,15">
                <TextBlock Text="ФИО:" Style="{StaticResource CaptionText}" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="FullNameTextBox" 
                         Height="25" 
                         Padding="3"
                         Style="{DynamicResource InputBoxStyle}"/>
            </StackPanel>

            <StackPanel Margin="0,0,0,15">
                <TextBlock Text="Пароль SQL Server:" Style="{StaticResource CaptionText}" FontWeight="Bold" Margin="0,0,0,5"/>
                <PasswordBox x:Name="PasswordBox" 
                             Height="25" 
                             Padding="3"
                             PasswordChanged="PasswordBox_PasswordChanged"
                             Style="{DynamicResource PasswordBoxStyle}"/>
                <TextBlock x:Name="PasswordRequirements" 
                           Text="Пароль должен содержать не менее 8 символов, включая заглавные, строчные буквы, цифры и специальные символы" 
                           FontSize="10" 
                           Foreground="Gray"
                           Margin="0,2,0,0"
                           TextWrapping="Wrap" 
                           Style="{StaticResource CaptionText}"/>
                <TextBlock x:Name="PasswordStrength" 
                           Text="" 
                           FontSize="10" 
                           FontWeight="Bold"
                           Margin="0,2,0,0"
                           Style="{DynamicResource CaptionText}"/>
            </StackPanel>

            <StackPanel Margin="0,0,0,0">
                <TextBlock Text="Подтверждение пароля:" Style="{StaticResource CaptionText}" FontWeight="Bold" Margin="0,0,0,5"/>
                <PasswordBox x:Name="ConfirmPasswordBox" 
                             Height="25" 
                             Padding="3"
                             PasswordChanged="ConfirmPasswordBox_PasswordChanged"
                             Style="{DynamicResource PasswordBoxStyle}"/>
                <TextBlock x:Name="PasswordMatch" 
                           Text="" 
                           FontSize="10" 
                           FontWeight="Bold"
                           Margin="0,2,0,0"
                           Style="{StaticResource CaptionText}"/>
            </StackPanel>

            <StackPanel Margin="0,0,0,5">
                <CheckBox x:Name="GeneratePasswordCheckBox" 
                          Content="Сгенерировать безопасный пароль"
                          IsChecked="True"
                          Checked="GeneratePasswordCheckBox_Checked"
                          Unchecked="GeneratePasswordCheckBox_Unchecked" Foreground="#FFB4C8C8"
                          />
                <TextBlock x:Name="GeneratedPasswordText" 
                            Text="" 
                            FontSize="10" 
                            FontWeight="Bold"
                             Foreground="Green"/>
            </StackPanel>

            <StackPanel Margin="0,0,0,15" Height="113">
                <TextBlock Text="Роли базы данных:" Style="{StaticResource CaptionText}" FontWeight="Bold" Margin="0,0,0,5"/>
                <ListBox x:Name="RolesListBox" 
                         Height="90"
                         SelectionMode="Multiple">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <CheckBox Content="{Binding}" 
                                      IsChecked="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsSelected}"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Создать" 
                    Click="CreateButton_Click" 
                    Width="100"
                    Margin="0,0,10,0"
                    x:Name="CreateButton"
                    Style="{DynamicResource PrimaryButton}"/>
            <Button Content="Отмена" 
                    Click="CancelButton_Click" 
                    Width="80"
                    Style="{DynamicResource DeleteButton}"/>
        </StackPanel>
    </Grid>
</Window>