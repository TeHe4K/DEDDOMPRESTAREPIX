<Page x:Class="blago.Pages.Auth"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:blago.Pages"
      mc:Ignorable="d"
      Title="Auth"
      Background="{StaticResource BgDark}"
      KeyDown="Enter">

    <Grid Margin="24">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1.3*"/>
        </Grid.ColumnDefinitions>

        <!-- ====== ЛЕВАЯ ПАНЕЛЬ ====== -->
        <Border Grid.Column="0"
                Background="{StaticResource CardBg}"
                CornerRadius="12"
                Padding="18"
                Margin="12">

            <Grid VerticalAlignment="Center">
                <StackPanel Width="260" HorizontalAlignment="Center">

                    <!-- Logo -->
                    <Grid Width="120" Height="120" HorizontalAlignment="Center">
                        <Image Source="/Image/LogoNew.png"
                               Width="120" Height="120"
                               Stretch="Uniform"
                               Margin="-25,-40,-25,-2"/>
                    </Grid>

                    <TextBlock Text="Панель управления базами данных"
                               Style="{StaticResource CaptionText}"
                               Margin="0,18,0,0"
                               TextAlignment="Center"/>

                    <TextBlock Text="Предупреждение!"
                               Style="{StaticResource CaptionText}"
                               Foreground="#FFDF5757"
                               Margin="0,18,0,0"
                               FontWeight="Bold"
                               TextAlignment="Center"/>

                    <TextBlock Text="Д4нн0е пр0гр4ммн0е 06еспечение с0здан0 8 &#x0a; р43влек4тельнb|х целяX и не несет ник4к0й &#x0a;смысл0в0Z~ н4Lру3ки!;"
                               Style="{StaticResource CaptionText}"
                               Foreground="#FFDF5757"
                               Margin="0,18,0,0"
                               FontSize="10"
                               TextAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>


        <!-- ====== Right Panel ====== -->
        <Grid Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">

            <Border Style="{StaticResource CardStyle}"
                    Background="{StaticResource InputBg}"
                    Width="380" Padding="25">

                <StackPanel>

                    <TextBlock Text="Авторизация"
                               Style="{StaticResource TitleText}"
                               Margin="0,0,0,12"/>

                    <!-- Login -->
                    <TextBlock Text="Логин"
                               Style="{StaticResource CaptionText}"
                               Margin="2,6,0,4"/>

                    <TextBox x:Name="txtUser"
                             Style="{StaticResource InputBoxStyle}"
                             ToolTip="Введите логин"
                             AutomationProperties.Name="Логин"/>

                    <!-- Password -->
                    <TextBlock Text="Пароль"
                               Style="{StaticResource CaptionText}"
                               Margin="2,12,0,4"/>

                    <PasswordBox x:Name="txtPass"
                                 Style="{StaticResource PasswordBoxStyle}"
                                 ToolTip="Введите пароль"
                                 AutomationProperties.Name="Пароль"/>

                    <!-- DataBase -->
                    <TextBlock Text="База данных"
                               Style="{StaticResource CaptionText}"
                               Margin="2,12,0,4"/>

                    <ComboBox Style="{StaticResource ComboBoxDark}"
                              Height="40"
                              x:Name="DBChoice">
                        <ComboBoxItem Content="Детский Дом"/>
                        <ComboBoxItem Content="Дом престарелых"/>
                    </ComboBox>

                    <!-- Button -->
                    <Button x:Name="LoginButton"
                            Content="Войти"
                            Style="{StaticResource PrimaryButton}"
                            Margin="0,18,0,8"
                            Height="44"
                            Click="Login_Click"/>

                    <TextBlock Text="Вход только для сотрудников компании"
                               Style="{StaticResource CaptionText}"
                               HorizontalAlignment="Center"
                               Margin="0,8,0,0"/>
                </StackPanel>
            </Border>
        </Grid>

    </Grid>
</Page>
