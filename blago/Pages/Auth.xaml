<Page x:Class="blago.Pages.Auth"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:blago.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Auth" KeyDown="Enter">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Image/LogIn_BG.png" Stretch="UniformToFill"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="12*"/>
            <RowDefinition Height="13*"/>
        </Grid.RowDefinitions>
        <Image Source="/Image/Logo.png" HorizontalAlignment="Center" VerticalAlignment="Center" Height="130" Width="374"/>
        <StackPanel Margin="215,0,215,0" VerticalAlignment="Center" Grid.Row="1" Height="280">
            <TextBlock FontSize="24" Margin="0,0,0,10" HorizontalAlignment="Center" Language="ru-ru" Text="Авторизация" Foreground="#98D9B2" FontWeight="Bold"/>
            <Border BorderThickness="4" BorderBrush="#FFD4D4D4" CornerRadius="8">
                <TextBox x:Name="txtUser" Height="30" Margin="0,0,0,0" BorderBrush="#FFD4D4D4" Background="#FFD4D4D4" SelectionBrush="{x:Null}" FontSize="20" Foreground="#FFA3A3A3" FontWeight="Bold" />
            </Border>
            <Border BorderThickness="4" BorderBrush="#FFD4D4D4" CornerRadius="8" Margin="0,20,0,20">
                <PasswordBox x:Name="txtPass" Height="30" BorderBrush="#FFD4D4D4" Background="#FFD4D4D4" SelectionBrush="{x:Null}" FontSize="20" Foreground="#FFA3A3A3" FontWeight="Bold"/>
            </Border>

            <Button Content="Войти" Height="35" Click="Login_Click" Background="#FF98D9B2" Foreground="#5F8B71" FontWeight="Bold" FontSize="18" Width="168">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="8"/>
                    </Style>
                </Button.Resources>
            </Button>

            <TextBlock x:Name="txtStatus" Foreground="Red" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Page>
