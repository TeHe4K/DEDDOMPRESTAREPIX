<Window x:Class="blago.Pages.EditTableWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:blago.Pages"
        mc:Ignorable="d"
        Title="Редактирование таблицы"
        Height="500"
        Width="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{StaticResource BgDark}" WindowStyle="ToolWindow">

    <Grid Margin="14">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Background="{StaticResource CardBg}"
                CornerRadius="14"
                Padding="14"
                Grid.Row="0">

            <StackPanel>
                <TextBlock Text="Редактирование таблицы:"
                           Foreground="{StaticResource TextLight}"
                           FontSize="18"
                           FontWeight="Bold"/>

                <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                    <TextBlock Text="Текущее имя:"
                               Foreground="{StaticResource TextDim}"
                               FontSize="14"/>
                    <TextBlock x:Name="CurrentTableNameText"
                               Text="TableName"
                               Margin="6,0,0,0"
                               Foreground="{StaticResource Mint}"
                               FontWeight="SemiBold"
                               FontSize="14"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                    <TextBlock Text="Новое имя:"
                               Foreground="{StaticResource TextDim}"
                               FontSize="14"/>

                    <TextBox x:Name="NewTableNameTextBox"
                             Style="{StaticResource InputBoxStyle}"
                             Width="160"
                             Margin="6,0,0,0"/>
                </StackPanel>

                <TextBlock x:Name="RowCountText"
                           Text=""
                           Foreground="{StaticResource TextDim}"
                           FontSize="12"
                           Margin="0,6,0,0"/>
            </StackPanel>
        </Border>

        <Grid Grid.Row="1" Margin="0,12,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Background="{StaticResource CardBg}"
                    CornerRadius="14"
                    Padding="12"
                    Grid.Row="0">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="Имя:"
                               Foreground="{StaticResource TextDim}"
                               VerticalAlignment="Center"/>

                    <TextBox Grid.Column="1"
                             x:Name="NewColumnNameTextBox"
                             Style="{StaticResource InputBoxStyle}"
                             Width="160"
                             Margin="6,0"
                             VerticalAlignment="Center"/>

                    <TextBlock Grid.Column="2"
                               Text="Тип:"
                               Foreground="{StaticResource TextDim}"
                               VerticalAlignment="Center"
                               Margin="8,0"/>

                    <ComboBox Grid.Column="3"
                              x:Name="DataTypeComboBox"
                              Style="{StaticResource ComboBoxDark}"
                              SelectedIndex="0"
                              Width="160"
                              Margin="6,0">

                        <ComboBoxItem Content="int"/>
                        <ComboBoxItem Content="varchar(50)"/>
                        <ComboBoxItem Content="nvarchar(100)"/>
                        <ComboBoxItem Content="nvarchar(MAX)"/>
                        <ComboBoxItem Content="datetime"/>
                        <ComboBoxItem Content="date"/>
                        <ComboBoxItem Content="decimal(18,2)"/>
                        <ComboBoxItem Content="bit"/>
                    </ComboBox>

                    <CheckBox Grid.Column="4"
                              x:Name="AllowNullCheckBox"
                              Content="NULL"
                              
                              Margin="8,0"
                              VerticalAlignment="Center"
                              IsChecked="True" Foreground="White"/>

                    <Button Grid.Column="5"
                            Content="Добавить"
                            Width="100"
                            Margin="8,0"
                            Style="{StaticResource PrimaryButton}"
                            Click="AddColumnButton_Click"/>

                    <Button Grid.Column="6"
                            Content="Очистить"
                            Width="100"
                            Margin="8,0"
                            Style="{StaticResource DeleteButton}"
                            Click="ClearColumnsButton_Click"/>
                </Grid>
            </Border>

            <Border Background="{StaticResource CardBg}"
                    CornerRadius="14"
                    Padding="8"
                    Grid.Row="1"
                    Margin="0,12,0,0">

                <DataGrid x:Name="ColumnsDataGrid"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="True"
                          HeadersVisibility="Column"
                          Background="{StaticResource CardBg}"
                          BorderThickness="0"
                          Foreground="{StaticResource TextLight}"
                          SelectionMode="Single"
                          RowBackground="{StaticResource CardBg}"
                          AlternatingRowBackground="#11222222"
                          Style="{StaticResource ModernDataGrid}">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Имя столбца" Binding="{Binding ColumnName}" Width="*"/>
                        <DataGridTextColumn Header="Тип данных" Binding="{Binding DataType}" Width="150"/>
                        <DataGridCheckBoxColumn Header="NULL" Binding="{Binding AllowNull}" Width="60"/>
                        <DataGridCheckBoxColumn Header="PK" Binding="{Binding IsPrimaryKey}" Width="60"/>

                        <DataGridTemplateColumn Header="Действия" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Удалить"
                                            Style="{StaticResource DeleteButton}"
                                            Padding="6 2"
                                            Click="DeleteColumnButton_Click"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>

                </DataGrid>
            </Border>

        </Grid>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0">

            <Button Content="Сохранить"
                    Width="140"
                    Style="{StaticResource PrimaryButton}"
                    Click="SaveButton_Click"/>

            <Button Content="Отмена"
                    Width="120"
                    Margin="12,0,0,0"
                    Style="{StaticResource DeleteButton}"
                    Click="CancelButton_Click"/>
        </StackPanel>

    </Grid>
</Window>
