<Page x:Class="blago.Pages.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:blago.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserPage">

    <Grid Background="{StaticResource BgDark}">
        <!--Data Base View-->
        <DataGrid 
        Margin="181,10,10,10" 
        x:Name="TableView" 
        Style="{DynamicResource ModernDataGrid}"/>
        <!--Table List-->
        <ListBox 
        Margin="10,10,624,10" 
        x:Name="TableList" 
        SelectionChanged="TableList_SelectionChanged" 
        Style="{DynamicResource BaseInput}"/>
    </Grid>
</Page>
