<Page x:Class="blago.Pages.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:blago.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" MaxHeight="450" MaxWidth="800"
      Title="UserPage"
      KeyDown="Exit">

    <Grid Background="{StaticResource BgDark}">
        <!--Data Base View-->
        <DataGrid 
            Margin="181,10,10,42" 
            x:Name="TableView" 
            Style="{DynamicResource ModernDataGrid}"/>
        <!--Table List-->
        <ListBox 
            Margin="10,10,624,42" 
            x:Name="TableList" 
            SelectionChanged="TableList_SelectionChanged" 
            Style="{DynamicResource BaseInput}"/>
        <!--Object Table edit-->
        <Button 
            Content="Add"
            x:Name="AddButton"
            Margin="181,412,489,11" 
            Width="130" 
            Style="{StaticResource PrimaryButton}" 
            Click="AddNote" 
            Height="27"/>
        <Button 
            Content="Delete"
            x:Name="DeleteButton"
            Margin="316,412,354,11" 
            Width="130" 
            Style="{StaticResource PrimaryButton}" 
            Click="DeleteNote" 
            Height="27"/>
        <Button 
            Content="Edit" 
            x:Name="EditButton"
            Margin="451,412,219,11" 
            Width="130" 
            Style="{StaticResource PrimaryButton}" 
            Click="EditNote" 
            Height="27"/>
    </Grid>
</Page>