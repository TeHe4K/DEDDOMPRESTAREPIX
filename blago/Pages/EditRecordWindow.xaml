<Window x:Class="blago.Pages.EditRecordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Редактирование записи"
        Height="600"
        Width="800"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BgDark}">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/blago;component/Style.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>


    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <Border Background="{StaticResource CardBg}"
                CornerRadius="12"
                Padding="14"
                Grid.Row="0">

            <StackPanel>
                <TextBlock Text="Редактирование записи"
                           Foreground="{StaticResource TextLight}"
                           FontSize="20"
                           FontWeight="Bold"/>

                <TextBlock x:Name="TableNameText"
                           Text="TableName"
                           Margin="0,6,0,0"
                           Foreground="{StaticResource Mint}"
                           FontSize="14"
                           FontWeight="SemiBold"/>

                <TextBlock x:Name="RecordInfoText"
                           Text=""
                           Foreground="{StaticResource TextDim}"
                           FontSize="12"
                           Margin="0,4,0,0"/>
            </StackPanel>
        </Border>


        <Border Background="{StaticResource CardBg}"
                CornerRadius="12"
                Padding="14"
                Margin="0,12,0,0"
                Grid.Row="1">

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="FieldsPanel"
                            Margin="0,0,4,0">
    
                </StackPanel>
            </ScrollViewer>
        </Border>

        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Grid.Row="2"
                    Margin="0,14,0,0">

            <Button Content="Сохранить"
                    Width="140"
                    Style="{StaticResource PrimaryButton}"
                    Click="SaveButton_Click"/>

            <Button Content="Сбросить"
                    Width="120"
                    Margin="12,0,0,0"
                    Style="{StaticResource PrimaryButton}"
                    Click="ResetButton_Click"/>

            <Button Content="Отмена"
                    Width="120"
                    Margin="12,0,0,0"
                    Style="{StaticResource DeleteButton}"
                    Click="CancelButton_Click"/>
        </StackPanel>

    </Grid>
</Window>
