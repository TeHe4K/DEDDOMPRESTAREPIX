<Window x:Class="blago.Pages.EditRecordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:blago.Pages"
        mc:Ignorable="d"
        Title="Редактирование записи" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Информация о записи -->
        <Border Grid.Row="0" 
                BorderBrush="LightBlue" 
                BorderThickness="1" 
                CornerRadius="5" 
                Padding="10"
                Background="#F0F8FF">
            <StackPanel>
                <TextBlock Text="Редактирование записи:" 
                           FontSize="16" 
                           FontWeight="Bold"/>
                <TextBlock x:Name="TableNameText" 
                           Text="TableName" 
                           FontSize="14" 
                           Foreground="Blue"
                           FontWeight="Bold"
                           Margin="0,5,0,0"/>
                <TextBlock x:Name="RecordInfoText" 
                           Text="" 
                           FontSize="12" 
                           Foreground="Gray"
                           Margin="0,2,0,0"/>
            </StackPanel>
        </Border>

        <!-- Форма для редактирования -->
        <Border Grid.Row="1" 
                BorderBrush="LightGray" 
                BorderThickness="1" 
                CornerRadius="3"
                Margin="0,10,0,0"
                Padding="10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="FieldsPanel">
                    <!-- Поля будут добавляться динамически -->
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Кнопки действий -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,15,0,0">
            <Button Content="Сохранить" 
                    Click="SaveButton_Click" 
                    Width="100"
                    Background="LightGreen"
                    FontWeight="Bold"/>
            <Button Content="Отмена" 
                    Click="CancelButton_Click" 
                    Width="80"
                    Background="LightGray"
                    Margin="10,0,10,0"/>
            <Button Content="Сбросить" 
                    Click="ResetButton_Click" 
                    Width="80"
                    Background="LightYellow"/>
        </StackPanel>
    </Grid>
</Window>
