<Window x:Class="blago.Pages.ConfirmDeleteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:blago.Pages"
        mc:Ignorable="d"
        Title="Подтверждение удаления" 
        Height="346" 
        Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" SizeToContent="WidthAndHeight" Background="{StaticResource CardBg}">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,15">
            <TextBlock Text="⚠️" FontSize="48" HorizontalAlignment="Center" Style="{StaticResource TitleText}" Foreground="#FFDF5757"/>
            <TextBlock Text="ВНИМАНИЕ!" 
                       FontSize="16" 
                       FontWeight="Bold" 
                       Foreground="#FFDF5757"
                       HorizontalAlignment="Center"
                       Style="{StaticResource TitleText}"/>
        </StackPanel>
        <StackPanel Grid.Row="1">
            <TextBlock Text="Вы собираетесь удалить таблицу:" 
                       FontWeight="Bold"
                       Style="{StaticResource CaptionText}"/>
            <Border BorderBrush="#FFDF5757" 
                    BorderThickness="3" 
                    CornerRadius="5" 
                    Padding="10" 
                    Margin="0,5,0,10" Height="42">
                <TextBlock x:Name="txtTableName" 
                           Text="TableName" 
                           FontSize="14" 
                           FontWeight="Bold"
                           HorizontalAlignment="Center" Foreground="{DynamicResource TextLight}"/>
            </Border>
        </StackPanel>
        <StackPanel Grid.Row="2">
            <TextBlock Text="Для подтверждения введите название таблицы:" 
                       Margin="0,0,0,5" 
                       Style="{StaticResource CaptionText}"
                       FontWeight="Bold"/>
            <TextBox x:Name="txtConfirmTableName" 
                     FontSize="14" 
                     Padding="5"
                     TextChanged="TxtConfirmTableName_TextChanged" Height="37"
                     Style="{DynamicResource InputBoxStyle}"/>
            <TextBlock x:Name="txtValidationMessage" 
                       Foreground="Red" 
                       FontSize="12"
                       Visibility="Collapsed"/>
        </StackPanel>
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,15,0,0">
            <Button Content="Удалить" 
                    x:Name="btnDelete"
                    Click="BtnDelete_Click" 
                    Width="100"
                    Background="#FFCD5C5C"
                    Foreground="White"
                    FontWeight="Bold"
                    IsEnabled="False"
                    Margin="0,0,10,0"
                    Style="{DynamicResource PrimaryButton}"/>
            <Button Content="Отмена" 
                    Click="BtnCancel_Click" 
                    Width="80"
                    Background="{DynamicResource Teal}"
                    Style="{StaticResource PrimaryButton}"/>
        </StackPanel>
    </Grid>
</Window>