<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="DarkBackgroundColor">#FF0F1F1F</Color>
    <Color x:Key="CardBackgroundColor">#FF162A2A</Color>
    <Color x:Key="AccentMintColor">#FFA9F5D0</Color>
    <Color x:Key="PrimaryTealColor">#FF2C7A78</Color>
    <Color x:Key="TextLightColor">#FFFFFFFF</Color>
    <Color x:Key="TextDimColor">#FFB4C8C8</Color>
    <Color x:Key="InputBackgroundColor">#FF1D3535</Color>
    <Color x:Key="InputBorderColor">#FF355555</Color>

    <SolidColorBrush x:Key="BgDark" Color="{StaticResource DarkBackgroundColor}"/>
    <SolidColorBrush x:Key="CardBg" Color="{StaticResource CardBackgroundColor}"/>
    <SolidColorBrush x:Key="Mint" Color="{StaticResource AccentMintColor}"/>
    <SolidColorBrush x:Key="Teal" Color="{StaticResource PrimaryTealColor}"/>
    <SolidColorBrush x:Key="TextLight" Color="{StaticResource TextLightColor}"/>
    <SolidColorBrush x:Key="TextDim" Color="{StaticResource TextDimColor}"/>
    <SolidColorBrush x:Key="InputBg" Color="{StaticResource InputBackgroundColor}"/>
    <SolidColorBrush x:Key="InputBorder" Color="{StaticResource InputBorderColor}"/>

    <FontFamily x:Key="UiFont">Segoe UI</FontFamily>

    <Style x:Key="CaptionText" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource TextDim}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontFamily" Value="{StaticResource UiFont}"/>
    </Style>

    <Style x:Key="TitleText" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource TextLight}"/>
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FontFamily" Value="{StaticResource UiFont}"/>
    </Style>
    <Style x:Key="CardStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource CardBg}"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Padding" Value="15"/>
        <Setter Property="Margin" Value="10"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect BlurRadius="12" ShadowDepth="2" Color="#000000" Opacity="0.35"/>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="InputBoxStyle" TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource InputBg}"/>
        <Setter Property="Foreground" Value="{StaticResource TextLight}"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="Margin" Value="0 0 0 10"/>
        <Setter Property="BorderBrush" Value="{StaticResource InputBorder}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="FontFamily" Value="{StaticResource UiFont}"/>
    </Style>

    <Style x:Key="PasswordBoxStyle" TargetType="PasswordBox">
        <Setter Property="Background" Value="{StaticResource InputBg}"/>
        <Setter Property="Foreground" Value="{StaticResource TextLight}"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="Margin" Value="0 0 0 10"/>
        <Setter Property="BorderBrush" Value="{StaticResource InputBorder}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="FontFamily" Value="{StaticResource UiFont}"/>
    </Style>

    <Style x:Key="PrimaryButton" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource Teal}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="FontFamily" Value="{StaticResource UiFont}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" CornerRadius="8">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect BlurRadius="10" ShadowDepth="1" Color="#000000" Opacity="0.45"/>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#45C789"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="#2D8F64"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
        <Setter Property="Background" Value="{StaticResource InputBg}"/>
        <Setter Property="Foreground" Value="{StaticResource TextLight}"/>
        <Setter Property="BorderBrush" Value="{StaticResource InputBorder}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="6"/>
        <Setter Property="Margin" Value="0 0 0 10"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontFamily" Value="{StaticResource UiFont}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBox">
                    <Grid>
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"/>

                        <DockPanel>
                            <ContentPresenter Margin="6,0"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left"/>

                            <Path x:Name="Arrow"
                                  Width="12"
                                  Height="12"
                                  Stretch="Uniform"
                                  Fill="{StaticResource TextDim}"
                                  Margin="0,0,8,0"
                                  HorizontalAlignment="Right"
                                  VerticalAlignment="Center"
                                  Data="M 0 0 L 10 0 L 5 5 Z"/>
                        </DockPanel>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Arrow" Property="Fill" Value="{StaticResource Mint}"/>
                            <Setter Property="BorderBrush" Value="{StaticResource Teal}"/>
                        </Trigger>
                        <Trigger Property="IsDropDownOpen" Value="True">
                            <Setter TargetName="Arrow" Property="Fill" Value="{StaticResource Mint}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="ModernDataGrid" TargetType="DataGrid">
        <Setter Property="Background" Value="{StaticResource CardBg}"/>
        <Setter Property="Foreground" Value="{StaticResource TextLight}"/>
        <Setter Property="BorderBrush" Value="{StaticResource InputBorder}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="HeadersVisibility" Value="Column"/>
        <Setter Property="RowBackground" Value="{StaticResource CardBg}"/>
        <Setter Property="AlternatingRowBackground" Value="#11223333"/>
        <Setter Property="FontFamily" Value="{StaticResource UiFont}"/>
        <Setter Property="FontSize" Value="14"/>

        <Setter Property="ColumnHeaderStyle">
            <Setter.Value>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="{StaticResource CardBg}"/>
                    <Setter Property="Foreground" Value="{StaticResource TextDim}"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="BorderBrush" Value="{StaticResource InputBorder}"/>
                    <Setter Property="BorderThickness" Value="0 0 0 1"/>
                    <Setter Property="Padding" Value="6"/>
                </Style>
            </Setter.Value>
        </Setter>

        <Setter Property="CellStyle">
            <Setter.Value>
                <Style TargetType="DataGridCell">
                    <Setter Property="BorderBrush" Value="{StaticResource InputBorder}"/>
                    <Setter Property="BorderThickness" Value="0 0 0 1"/>
                    <Setter Property="Padding" Value="6"/>
                    <Setter Property="Foreground" Value="{StaticResource TextLight}"/>

                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#222C7A78"/>
                            <Setter Property="BorderBrush" Value="{StaticResource Teal}"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="DeleteButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
        <Setter Property="Background" Value="#FFCC3A3A"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#FFE05151"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="#FFB43232"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
        <Setter Property="Background" Value="#33445555"/>
        <Setter Property="Foreground" Value="{StaticResource TextLight}"/>

        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#55667777"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="#44556666"/>
            </Trigger>
        </Style.Triggers>
    </Style>


</ResourceDictionary>
