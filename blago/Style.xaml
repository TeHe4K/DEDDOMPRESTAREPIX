<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Цвета -->
    <Color x:Key="DarkBackgroundColor">#FF0F1F1F</Color>
    <Color x:Key="CardBackgroundColor">#FF162A2A</Color>
    <Color x:Key="AccentMintColor">#FFA9F5D0</Color>
    <Color x:Key="PrimaryTealColor">#FF2C7A78</Color>
    <Color x:Key="TextLightColor">#FFFFFFFF</Color>
    <Color x:Key="TextDimColor">#FFB4C8C8</Color>
    <Color x:Key="InputBackgroundColor">#FF1D3535</Color>
    <Color x:Key="InputBorderColor">#FF355555</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="BgDark" Color="{StaticResource DarkBackgroundColor}"/>
    <SolidColorBrush x:Key="CardBg" Color="{StaticResource CardBackgroundColor}"/>
    <SolidColorBrush x:Key="Mint" Color="{StaticResource AccentMintColor}"/>
    <SolidColorBrush x:Key="Teal" Color="{StaticResource PrimaryTealColor}"/>
    <SolidColorBrush x:Key="TextLight" Color="{StaticResource TextLightColor}"/>
    <SolidColorBrush x:Key="TextDim" Color="{StaticResource TextDimColor}"/>
    <SolidColorBrush x:Key="InputBg" Color="{StaticResource InputBackgroundColor}"/>
    <SolidColorBrush x:Key="InputBorder" Color="{StaticResource InputBorderColor}"/>

    <!-- Шрифт -->
    <FontFamily x:Key="UiFont">Segoe UI</FontFamily>

    <!-- Тексты -->
    <Style x:Key="CaptionText" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource TextDim}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontFamily" Value="{StaticResource UiFont}"/>
    </Style>

    <Style x:Key="TitleText" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource TextLight}"/>
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FontFamily" Value="{StaticResource UiFont}"/>
    </Style>

    <!-- Карточки -->
    <Style x:Key="CardStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource CardBg}"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Padding" Value="15"/>
        <Setter Property="Margin" Value="10"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect BlurRadius="12" ShadowDepth="2" Color="#000000" Opacity="0.35"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Поля ввода -->
    <Style x:Key="InputBoxStyle" TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource InputBg}"/>
        <Setter Property="Foreground" Value="{StaticResource TextLight}"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="Margin" Value="0 0 0 10"/>
        <Setter Property="BorderBrush" Value="{StaticResource InputBorder}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="FontFamily" Value="{StaticResource UiFont}"/>
    </Style>

    <Style x:Key="PasswordBoxStyle" TargetType="PasswordBox">
        <Setter Property="Background" Value="{StaticResource InputBg}"/>
        <Setter Property="Foreground" Value="{StaticResource TextLight}"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="Margin" Value="0 0 0 10"/>
        <Setter Property="BorderBrush" Value="{StaticResource InputBorder}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="FontFamily" Value="{StaticResource UiFont}"/>
    </Style>

    <!-- Кнопки -->
    <Style x:Key="PrimaryButton" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource Teal}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="FontFamily" Value="{StaticResource UiFont}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" CornerRadius="8">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect BlurRadius="10" ShadowDepth="1" Color="#000000" Opacity="0.45"/>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#45C789"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="#2D8F64"/>
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>
